@model IEnumerable<ETradingSystem1.Entities.Share>

@{
    ViewData["Title"] = "Index";
}

<h1>Share</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
 <a asp-action="Index" class="btn btn-dark" > Buy</a>
 </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SharesName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SharePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShareQuantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SharesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SharePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShareQuantity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShareId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShareId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShareId">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>
